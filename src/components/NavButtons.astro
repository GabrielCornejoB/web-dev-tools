---
import type { Link } from "../models/link.model";
import Arrow from "./icons/Arrow.astro";

interface Props {
  activeLink: Link;
}

const { activeLink } = Astro.props;
---

<nav
  class="absolute bottom-0 flex h-[100px] w-screen flex-row border-l-[1px] border-t-[1px] border-base-200 bg-base-100 [grid-area:buttons] lg:static lg:h-[200px] lg:w-full"
>
  <a href={activeLink.previousPath} class="grid w-1/2 place-items-center">
    <Arrow direction="left" />
  </a>
  <a
    href={activeLink.nextPath}
    class="grid w-1/2 place-items-center border-l-[1px] border-base-200"
  >
    <Arrow direction="right" />
  </a>
</nav>

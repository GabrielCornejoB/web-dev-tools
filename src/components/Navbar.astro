---
import { links } from "../data/nav-links";
import type { Category } from "../models/category.model";
import type { Link } from "../models/link.model";
import CategoryIcon from "./icons/CategoryIcon.astro";
import Github from "./icons/Github.astro";
import Info from "./icons/Info.astro";
import MenuIcon from "./icons/MenuIcon.astro";

interface Props {
  name: string;
}

const { name } = Astro.props;
---

<header>
  <nav
    class="flex h-20 w-full flex-row items-center justify-between border-b-[1px] border-b-base-200 px-5 min-[1075px]:px-10"
  >
    <a
      href="/"
      class:list={[
        "font-mono text-2xl font-bold normal-case italic hover:text-white",
        name == "Web Dev Tools" && "text-white",
      ]}>{"<wdt/>"}</a
    >
    <label for="main-drawer" class="min-[1075px]:hidden">
      <MenuIcon />
    </label>

    <div class="hidden h-full min-[1075px]:flex min-[1075px]:flex-row">
      <div
        class="flex flex-row items-center gap-10 border-l-[1px] border-base-200 px-10"
      >
        {
          links.slice(1).map((link) => (
            <a href={link.path}>
              <CategoryIcon
                category={link.name.toLowerCase() as Category}
                color="content"
                size="nav"
                hoverColor={link.hoverFillColor}
                activeColor={name == link.name ? link.fillColor : undefined}
              />
            </a>
          ))
        }
      </div>

      <div
        class="flex flex-row items-center gap-10 border-l-[1px] border-base-200 pl-10"
      >
        <a href="/about">
          <Info isActive={name == "About"} />
        </a>
        <a href="https://github.com/GabrielCornejoB/web-dev-tools">
          <Github />
        </a>
      </div>
    </div>
  </nav>
</header>

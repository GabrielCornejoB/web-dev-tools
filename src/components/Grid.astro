---
import type { Tool } from "../models/tool.model";
import Card from "./Card.astro";

interface Props {
  tools: Tool[];
}
const { tools } = Astro.props;
---

<div class="mt-8 flex w-full flex-col items-center gap-8">
  <div
    class="mb-[25px] flex w-[300px] flex-row flex-wrap justify-center gap-[25px] md:w-[625px] lg:w-[950px] xl:w-[1125px] 2xl:w-[1275px]"
  >
    {tools.map((tool) => <Card tool={tool} />)}
  </div>
</div>

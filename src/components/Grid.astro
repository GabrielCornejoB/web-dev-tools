---
import type { Tool } from "../models/tool.model";
import Card from "./Card.astro";

interface Props {
  tools: Tool[];
}
const { tools } = Astro.props;
---

<div class="flex w-full flex-col items-center gap-8 py-8">
  <article
    class="flex w-[300px] flex-row flex-wrap justify-center gap-[25px] md:w-[625px] min-[1350px]:w-[950px] min-[1600px]:w-[1275px]"
  >
    {tools.map((tool) => <Card tool={tool} />)}
  </article>
</div>

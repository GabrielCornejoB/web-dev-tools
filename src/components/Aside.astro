---
import type { Link } from "../models/link.model";
interface Props {
  // title: string;
  // description: string;
  link: Link;
}

const { link } = Astro.props;
---

<aside class="flex flex-col [grid-area:aside]">
  <div
    class="grid h-20 place-items-center border-b-[1px] border-l-[1px] border-base-200"
  >
    <h1 class="text-4xl font-bold italic text-white">{link.name}</h1>
  </div>
  <div
    tabindex="0"
    class="min-h-10 collapse rounded-none border-b-[1px] border-l-[1px] border-base-200 lg:collapse-open lg:flex-grow"
  >
    <div
      class="collapse-title flex flex-row items-center justify-between px-5 lg:hidden"
    >
      <h2 class="font-medium">Tap to see description</h2>
    </div>
    <div class="collapse-content flex flex-col justify-end px-5">
      <p class="text-sm font-normal">
        Lorem ipsum dolor sit amet consectetur adipisicing elit. Iste eveniet
        atque dignissimos officiis eum explicabo aspernatur deserunt suscipit
        obcaecati odit.
      </p>
    </div>
  </div>
</aside>
